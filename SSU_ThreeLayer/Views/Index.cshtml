@model IEnumerable<SSU_ThreeLayer.ViewModel.VisShopVM>

@{
    Layout = "~/Views/Layouts/_HeaderLayout.cshtml";
}

<div class="container">
    @foreach (var item in Model)
    {
    <div class="shop">

        <div class="shop-info-block">
            <div>@item.IdShop</div>
            <div>@item.NameShop</div>
        </div>
        <div class="typeofshop">
            <b>TypeOfShop:&nbsp;</b>@item.typeOfShop.Description
        </div>
        <div class="address">
            <b>Country:&nbsp;</b>@item.address.Country
            <b>City:&nbsp;</b>@item.address.City
            <b>Street:&nbsp;</b>@item.address.Street
            <b>Build:&nbsp;</b>@item.address.Build
        </div>
        <div class="ratings">
            <b>Ratings:&nbsp;</b>@item.Ratings
        </div>
        <div class="userlist">
            <b>User list:&nbsp;</b> @item.UserList
        </div>

        @if (User.Identity.IsAuthenticated)
        {
        <div class="shop-buttons">
            @using (Html.BeginForm("GetUsersByShop", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <input type="number" name="idShop" value="@item.IdShop" class="hidden" />

                <button>Get Users By Shop</button>
            }
        </div>
        }
    </div>
    }
</div>